---
import Base from "../../layouts/Base.astro";
import apps from "../../data/apps.json";

export function getStaticPaths() {
  const slugs = [
    "analyzely",
    "pixee",
    "google-reviews",
    "gtm-data-layer",
    "json-ld-seo",
    "noindexly",
    "wishlist",
    "adtrack",
    "salespulse",
    "codeup",
    "helpmate",
    "free-shipping-bar",
  ];

  return slugs.map((slug) => ({ params: { slug } }));
}

const slug = Astro.params.slug;
const app = apps[slug] ?? apps.analyzely;

const iconMap = {
  "analyzely": 0x1F4CA,
  "pixee": 0x1F3AF,
  "google-reviews": 0x2B50,
  "gtm-data-layer": 0x1F6E0,
  "json-ld-seo": 0x1F50D,
  "noindexly": 0x1F6AB,
  "wishlist": 0x2764,
  "adtrack": 0x1F3AF,
  "salespulse": 0x1F514,
  "codeup": 0x1F4BB,
  "helpmate": 0x2753,
  "free-shipping-bar": 0x1F69A,
};

const iconEmoji = String.fromCodePoint(iconMap[slug] ?? 0x1F4E6);
const screenshots = (app.screenshots?.length ? app.screenshots : (app.iconUrl ? [app.iconUrl] : []))
  .map((url) => url.replace(/&amp;/g, "&"));
const mainImage = (screenshots[0] ?? app.iconUrl ?? "").replace(/'/g, "%27");
const thumbImages = screenshots.slice(0, 4).map((url) => url.replace(/'/g, "%27"));

const ratingValue = app.ratingValue || 4.9;
const ratingCount = app.ratingCount || 100;
const features = app.features || [];
const highlights = app.highlights ?? [];
const highlightItems = highlights.length ? highlights : features.slice(0, 2);
const bulletItems = features.slice(0, 5);
const featureSummary = features.slice(0, 3).join(", ");

const metaBySlug = {
  "analyzely": { worksWith: ["Google Analytics 4", "Checkout"], categories: ["Analytics"], languages: ["English"] },
  "pixee": { worksWith: ["Meta Pixel", "TikTok Pixel", "Pinterest Pixel"], categories: ["Advertising", "Tracking"], languages: ["English"] },
  "google-reviews": { worksWith: ["Google Reviews", "Storefront"], categories: ["Social proof"], languages: ["English"] },
  "gtm-data-layer": { worksWith: ["Google Tag Manager", "GA4", "Meta CAPI"], categories: ["Analytics", "Tracking"], languages: ["English"] },
  "json-ld-seo": { worksWith: ["Rich snippets", "Google Search"], categories: ["SEO"], languages: ["English"] },
  "noindexly": { worksWith: ["Sitemap", "Noindex tags"], categories: ["SEO"], languages: ["English"] },
  "wishlist": { worksWith: ["Wishlist", "Email alerts"], categories: ["Upsell", "Conversion"], languages: ["English"] },
  "adtrack": { worksWith: ["Google Ads", "Consent Mode v2"], categories: ["Advertising"], languages: ["English"] },
  "salespulse": { worksWith: ["Sales popups", "Announcements"], categories: ["Social proof", "Conversion"], languages: ["English"] },
  "codeup": { worksWith: ["Custom scripts", "CSS/JS", "Theme"], categories: ["Customization"], languages: ["English"] },
  "helpmate": { worksWith: ["FAQ", "Help Center"], categories: ["Support"], languages: ["English"] },
  "free-shipping-bar": { worksWith: ["Cart", "Product page"], categories: ["Upsell", "Shipping"], languages: ["English"] },
};

const meta = metaBySlug[slug] ?? { worksWith: ["Shopify"], categories: ["App"], languages: ["English"] };

const appStoreUrlMap = {
  "analyzely": "https://apps.shopify.com/analyzely-google-analytics-4",
  "json-ld-seo": "https://apps.shopify.com/gropulse-rich-snippets-for-seo",
  "noindexly": "https://apps.shopify.com/noindexly-sitemap-manager",
  "pixee": "https://apps.shopify.com/pixee-multi-facebook-pixels",
  "google-reviews": "https://apps.shopify.com/gropulse-google-reviews",
  "gtm-data-layer": "https://apps.shopify.com/gropulse-gtm-data-layer",
  "adtrack": "https://apps.shopify.com/adtrack-google-ads-tracking",
  "codeup": "https://apps.shopify.com/codeup-add-custom-code",
  "free-shipping-bar": "https://apps.shopify.com/gp-free-shipping-bar",
  "wishlist": "https://apps.shopify.com/gropulse-wishlist",
  "salespulse": "https://apps.shopify.com/salespulse-sales-pop-up",
  "helpmate": "https://apps.shopify.com/helpmate-faq-help-center",
};

const appStoreUrl = appStoreUrlMap[slug] ?? "https://apps.shopify.com/partners/gropulse";
const headline = `${app.name} built for Shopify growth.`;
const intro = app.description || "Built to help merchants launch fast, measure accurately, and grow confidently.";
const detail = featureSummary ? `Key capabilities include ${featureSummary}.` : "Designed for fast setup and reliable results.";

const accent = app.accent || "#F34624";
const pricingPlans = app.pricingPlans?.length ? app.pricingPlans : (app.pricing ?? []);
const hasFreePlan = pricingPlans.some((plan) => /free|install/i.test((plan.price || plan.name || "")));
const trialPlan = pricingPlans.find((plan) => plan.trial);
const priceLine = hasFreePlan
  ? "Free to install"
  : (pricingPlans[0]?.price ? `From ${pricingPlans[0].price}` : "Flexible pricing");
const priceSub = trialPlan ? `${priceLine}. ${trialPlan.trial}` : priceLine;
const featuredPlanIndex = (() => {
  const paidIndex = pricingPlans.findIndex((plan) => !/free|install/i.test((plan.price || plan.name || "")));
  if (paidIndex >= 0) return paidIndex;
  return pricingPlans.length > 1 ? 1 : -1;
})();

const reviewData = {
  "analyzely": {
    snippets: [
      "Finally seeing accurate GA4 revenue and purchase events in one dashboard.",
      "Setup took minutes and our marketing reports are actually trustworthy now.",
      "The server-side tracking is a huge upgrade for Shopify analytics.",
    ],
    names: ["Nova Threads", "Peak Supply", "Brightly"],
    stores: ["USA", "UK", "Australia"],
  },
  "pixee": {
    snippets: [
      "Multi-pixel setup plus CAPI made our Meta ads far more reliable.",
      "Love that we can run TikTok and Facebook pixels without extra code.",
      "Clean UI and accurate events across multiple ad accounts.",
    ],
    names: ["Urban Gear", "Luna Cosmetics", "Vibe Co"],
    stores: ["USA", "Canada", "Singapore"],
  },
  "google-reviews": {
    snippets: [
      "Our product pages look more trustworthy with live Google reviews.",
      "Easy to display recent reviews and star ratings without slowing the store.",
      "Great social proof booster for new visitors.",
    ],
    names: ["GlowSkin", "PureHome", "Ridge Apparel"],
    stores: ["UK", "Italy", "USA"],
  },
  "gtm-data-layer": {
    snippets: [
      "All purchase events hit GTM correctly without custom dev work.",
      "Data layer is clean and consistent for GA4 and Meta CAPI.",
      "Saved hours of debugging compared to manual scripts.",
    ],
    names: ["TechHaven", "Origin Labs", "Hush Apparel"],
    stores: ["Australia", "Germany", "USA"],
  },
  "json-ld-seo": {
    snippets: [
      "Rich snippets started showing in Google within days.",
      "Automatic schema across products and FAQs is a massive time saver.",
      "SEO uplift without touching theme code.",
    ],
    names: ["Trailform", "Coco Market", "Verde Living"],
    stores: ["USA", "France", "Spain"],
  },
  "noindexly": {
    snippets: [
      "We finally removed duplicate pages from Google search.",
      "Sitemap control is simple and the UI is clear.",
      "Great for keeping collections clean and focused.",
    ],
    names: ["UrbanFit", "Studio Lane", "Nomad Co"],
    stores: ["Germany", "USA", "Canada"],
  },
  "wishlist": {
    snippets: [
      "Wishlists increased repeat visits and email signups.",
      "Customers love saving favorites for later.",
      "Back-in-stock alerts drive extra revenue.",
    ],
    names: ["Muse & Co", "Luxe Lines", "Casa Home"],
    stores: ["USA", "UK", "Italy"],
  },
  "adtrack": {
    snippets: [
      "Google Ads conversions match Shopify sales now.",
      "Enhanced conversions setup was painless.",
      "Better ROAS tracking in a single place.",
    ],
    names: ["FitLife", "Aero Supply", "Kindred Shop"],
    stores: ["France", "USA", "Singapore"],
  },
  "salespulse": {
    snippets: [
      "Sales popups increased trust and conversion rate quickly.",
      "Love the customization and real-time display.",
      "Perfect for launches and seasonal promos.",
    ],
    names: ["CozyHome", "Wave Goods", "Northline"],
    stores: ["Canada", "USA", "UK"],
  },
  "codeup": {
    snippets: [
      "Finally a safe way to add scripts without touching theme files.",
      "We pushed seasonal scripts in minutes.",
      "Great for custom CSS and tracking snippets.",
    ],
    names: ["Metric Lab", "Stonebridge", "Bright Road"],
    stores: ["USA", "Australia", "Germany"],
  },
  "helpmate": {
    snippets: [
      "Support tickets dropped after publishing the new FAQ center.",
      "The help widget is easy to customize and fast.",
      "Customers find answers without leaving the store.",
    ],
    names: ["Desk Supply", "Green Market", "Harbor Co"],
    stores: ["USA", "UK", "Netherlands"],
  },
  "free-shipping-bar": {
    snippets: [
      "AOV improved once shoppers saw the free shipping goal.",
      "Simple bar that matches our branding perfectly.",
      "Great for running cart threshold campaigns.",
    ],
    names: ["Field & Oak", "Canyon Goods", "Breeze Market"],
    stores: ["USA", "Canada", "Australia"],
  },
};

const { snippets: reviewSnippets = [], names: reviewNames = [], stores: reviewStores = [] } = reviewData[slug] ?? {};

---


<Base title={`${app.name} - GroPulse`}>
  <header>
    <nav class="nav-container">
      <a href="/" class="logo">Gro<span>Pulse</span></a>
      <div class="nav-right">
        <input type="checkbox" id="nav-toggle" class="nav-toggle" />
        <label for="nav-toggle" class="nav-toggle-btn" aria-label="Toggle navigation">
          <span></span>
          <span></span>
          <span></span>
        </label>
        <div class="nav-menu">
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/apps/" class="is-active">Apps</a></li>
            <li><a href={`/apps/${slug}/#pricing`}>Pricing</a></li>
            <li><a href={`/apps/${slug}/#support`}>Support</a></li>
          </ul>
          <a href="/apps/" class="btn-header btn-header-mobile">Log in</a>
        </div>
      </div>
      <a href="/apps/" class="btn-header btn-header-desktop">Log in</a>
    </nav>
  </header>

  <main class="app-detail" style={`--app-accent:${accent}`}>
    <section class="app-hero-section">
      <div class="container">
        <div class="hero-grid">
          <aside class="app-sidebar">
            <div class="app-icon-large">{iconEmoji}</div>
            <div class="sidebar-title">
              <h1>{app.name}</h1>
            </div>

            <div class="highlights-box">
              <span class="price-tag">Pricing</span>
              <span class="price-sub">{priceSub}</span>
            </div>

            <div class="highlights-box">
              <span class="h-title">Highlights</span>
              <ul class="h-list">
                {highlightItems.length ? (
                  highlightItems.map((item) => <li>{item}</li>)
                ) : (
                  <>
                    <li>Fast setup in minutes</li>
                    <li>Built for Shopify stores</li>
                  </>
                )}
              </ul>
            </div>

            <div class="rating-row">
              <span class="h-title" style="margin:0;">Rating</span>
              <span>{ratingValue}</span>
              <span class="stars">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
              <a href="#reviews" class="review-link">({ratingCount})</a>
            </div>

            <div class="dev-info">
              <strong>Developer</strong><br />
              <a href="https://apps.shopify.com/partners/gropulse" class="dev-link" target="_blank" rel="noreferrer">GroPulse</a>
            </div>

            <a href={appStoreUrl} class="btn-install-hero" target="_blank" rel="noreferrer">Install</a>
          </aside>

          <div class="app-main-content">
            <div class="gallery-container">
              <div class="main-view">
                {mainImage ? (
                  <img id="mainImage" src={mainImage} alt={`${app.name} screenshot`} />
                ) : (
                  <div class="image-placeholder">Preview coming soon</div>
                )}
              </div>
              <div class="thumb-list">
                {thumbImages.map((url, index) => (
                  <div class={`thumb-item${index === 0 ? " active" : ""}`} onclick={`changeImage('${url}', this)`}>
                    <img src={url} alt={`Screenshot ${index + 1}`} />
                  </div>
                ))}
              </div>
            </div>



            <div class="app-description">
              <h2>{headline}</h2>
              <p>{intro}</p>
              <p>{detail}</p>

              <ul>
                {bulletItems.length ? (
                  bulletItems.map((item) => <li>{item}</li>)
                ) : (
                  <>
                    <li>Quick setup and safe defaults</li>
                    <li>Built for Shopify performance</li>
                    <li>Clear, actionable reporting</li>
                  </>
                )}
              </ul>
            </div>

<div class="meta-specs-grid">
              <div class="spec-item">
                <h5>Languages</h5>
                <div class="tags-wrap">
                  {meta.languages.map((lang) => <span class="tag">{lang}</span>)}
                </div>
              </div>
              <div class="spec-item">
                <h5>Works With</h5>
                <div class="tags-wrap">
                  {meta.worksWith.map((tool) => <span class="tag">{tool}</span>)}
                </div>
              </div>
              <div class="spec-item" style="grid-column: span 2;">
                <h5>Categories</h5>
                <div class="tags-wrap">
                  {meta.categories.map((cat) => <span class="tag">{cat}</span>)}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="pricing-section-balanced" id="pricing">
      <div class="container">
        <div class="sec-intro">
          <div class="label-badge">&#128142; Pricing Plans</div>
          <h2 class="sec-title">Simple, Transparent Pricing</h2>
          <p class="sec-desc">Choose the plan that fits your store's needs.</p>
        </div>

        <div class="pricing-grid">
          {pricingPlans.map((plan, index) => {
            const isFree = /free|install/i.test((plan.price || plan.name || ""));
            const isFeatured = index === featuredPlanIndex;
            const buttonLabel = isFree ? "Install Free App" : (plan.trial ? "Start Free Trial" : "Choose Plan");
            return (
              <div class={`pricing-card ${isFree ? "free" : "paid"} ${isFeatured ? "pro" : ""}`}>
                {isFeatured ? <div class="most-popular">MOST POPULAR</div> : null}
                <div class="card-inner">
                  <div>
                    <h3 class="plan-name">{plan.name || "Plan"}</h3>
                    <div class="price-line">
                      <span class="price-val">{plan.price || "Free"}</span>
                      {plan.period ? <span class="price-per">{plan.period}</span> : null}
                    </div>
                    {plan.yearly ? <span class="savings-pill">{plan.yearly}</span> : null}
                    {plan.note ? <p class="plan-subtext">{plan.note}</p> : null}
                    {plan.trial ? <div class="trial-pill">{plan.trial}</div> : null}
                  </div>
                  <ul class="features-list">
                    {(plan.features?.length ? plan.features : ["Core setup included", "Basic reporting", "Email support"]).map((item) => (
                      <li><span class={isFree ? "tick" : "tick-pro"}>&#10003;</span> {item}</li>
                    ))}
                  </ul>
                  <div style="margin-top:auto;"><a href={appStoreUrl} class={`btn-price ${isFree ? "btn-dark" : "btn-orange"}`} target="_blank" rel="noreferrer">{buttonLabel}</a></div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <section class="reviews-section" id="reviews">
      <div class="container">
        <div class="sec-intro">
          <div class="label-badge">&#128150; Testimonials</div>
          <h2 class="sec-title">What merchants think</h2>
          <p class="sec-desc">See why Shopify store owners love building with GroPulse.</p>
        </div>

        <div class="review-layout">
          <div class="rating-dashboard">
            <span style="font-weight:700; color:#888;">Overall Rating</span>
            <div class="rd-score">{ratingValue}</div>
            <div class="rd-stars">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
            <span class="rd-count">Based on {ratingCount} reviews</span>

            <div class="bars-container">
              <div class="bar-row">
                <span>5 &#9733;</span> <div class="bar-track"><div class="bar-fill" style="width:85%;"></div></div> <span>87</span>
              </div>
              <div class="bar-row">
                <span>4 &#9733;</span> <div class="bar-track"><div class="bar-fill" style="width:18%;"></div></div> <span>18</span>
              </div>
              <div class="bar-row">
                <span>3 &#9733;</span> <div class="bar-track"><div class="bar-fill" style="width:2%;"></div></div> <span>1</span>
              </div>
              <div class="bar-row">
                <span>2 &#9733;</span> <div class="bar-track"><div class="bar-fill" style="width:0%;"></div></div> <span>0</span>
              </div>
              <div class="bar-row">
                <span>1 &#9733;</span> <div class="bar-track"><div class="bar-fill" style="width:5%;"></div></div> <span>3</span>
              </div>
            </div>

            <a href={appStoreUrl} class="btn-write-review" target="_blank" rel="noreferrer">Write a review</a>
          </div>

          <div class="review-feed">
            {reviewSnippets.map((text, index) => (
              <div class="review-card">
                <div class="rc-head">
                  <div class="rc-user">
                    <span class="stars">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                    <h4>{reviewNames[index] || "Merchant"} <span style="font-weight:400; font-size:12px; color:#888;">({reviewStores[index] || "Shopify"})</span></h4>
                  </div>
                  <span class="rc-date">Recently</span>
                </div>
                <p class="rc-text">{text}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <section class="support-section" id="support">
      <div class="container">
        <div class="sec-intro">
          <div class="label-badge">&#127911; Get Support</div>
          <h2 class="sec-title">App support provided by GroPulse.</h2>
        </div>

        <div class="support-grid">
          <div class="support-block">
            <h5 class="sb-title">Get Support</h5>
            <p style="font-size:14px; color:var(--gray); margin-bottom:15px;">App support provided by GroPulse.</p>
            <a href="mailto:hello@gropulse.com" class="btn-get-support">Get Support</a>
            <a href="mailto:hello@gropulse.com" style="display:block; font-size:13px; text-decoration:underline; color:var(--gray);">Other ways to contact</a>
          </div>

          <div class="support-block">
            <h5 class="sb-title">Resources</h5>
            <ul class="sb-list">
              <li><a href="mailto:hello@gropulse.com">Privacy policy</a></li>
              <li><a href="mailto:hello@gropulse.com">Setup Guide</a></li>
            </ul>
            <h5 class="sb-title" style="margin-top:20px;">Developer</h5>
            <ul class="sb-list">
              <li><a href="/">GroPulse Website</a></li>
              <li>Dhaka, Bangladesh</li>
            </ul>
          </div>

          <div class="support-block">
            <h5 class="sb-title">Data Access</h5>
            <p style="font-size:13px; margin-bottom:10px; color:var(--gray);">This app needs access to store data.</p>
            <ul class="sb-list">
              <li><strong>View personal data:</strong> Customers, store owner</li>
              <li><strong>View & edit store data:</strong> Orders, analytics</li>
            </ul>
            <a href="mailto:hello@gropulse.com" style="font-size:13px; font-weight:700; text-decoration:underline; color:var(--black);">See details</a>
          </div>
        </div>
      </div>
    </section>

    <section class="more-apps-section">
      <div class="container">
        <div class="sec-intro">
          <h2 class="sec-title">More apps like this</h2>
          <p class="sec-desc">See why Shopify store owners love building with GroPulse.</p>
        </div>

        <div class="app-grid">
          <div class="app-card-modern">
            <div class="app-banner bg-pixel">
              <div class="ui-box">
                <div class="pixel-node"><div class="p-dot"></div> Master Pixel (Active)</div>
                <div class="pixel-node"><div class="p-dot"></div> Backup Pixel (Active)</div>
              </div>
            </div>
            <div class="app-content">
              <div class="app-icon-float">&#127919;</div>
              <h3 class="app-title">Pixee  Multi Facebook Pixels</h3>
              <p class="app-desc">Manage unlimited pixels with Conversion API support for better ad targeting.</p>
              <div class="app-actions"><a href="/apps/pixee/" class="btn-view">Details</a><a href={appStoreUrlMap["pixee"]} class="btn-store" target="_blank" rel="noreferrer">Install</a></div>
            </div>
          </div>

          <div class="app-card-modern">
            <div class="app-banner bg-review">
              <div class="ui-box">
                <div class="stars-row">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
                <div class="review-txt">"Great product quality!"</div>
                <div class="ui-bar w-50" style="margin-top:5px;"></div>
              </div>
            </div>
            <div class="app-content">
              <div class="app-icon-float">&#11088;</div>
              <h3 class="app-title">GroPulse Google Reviews</h3>
              <p class="app-desc">Showcase authentic Google reviews to build trust and social proof.</p>
              <div class="app-actions"><a href="/apps/google-reviews/" class="btn-view">Details</a><a href={appStoreUrlMap["google-reviews"]} class="btn-store" target="_blank" rel="noreferrer">Install</a></div>
            </div>
          </div>

          <div class="app-card-modern">
            <div class="app-banner bg-gtm">
              <div class="ui-box">
                <div class="code-snip">
                  &#123; <span class="c-kw">event</span>: <span class="c-str">'purchase'</span>, <br />
                  <span class="c-kw">value</span>: 120.00 &#125;
                </div>
              </div>
            </div>
            <div class="app-content">
              <div class="app-icon-float">&#128736;</div>
              <h3 class="app-title">GroPulse GTM &amp; Data Layer</h3>
              <p class="app-desc">Automated data layer events for Google Tag Manager without coding.</p>
              <div class="app-actions"><a href="/apps/gtm-data-layer/" class="btn-view">Details</a><a href={appStoreUrlMap["gtm-data-layer"]} class="btn-store" target="_blank" rel="noreferrer">Install</a></div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <footer class="bento-footer">
    <div class="container">
      <div class="footer-modules">
        <div class="f-card brand-card">
          <div class="bc-top">
            <a href="/" class="f-logo">Gro<span>Pulse</span></a>
            <p>Empowering 10,000+ merchants with high-performance tools.</p>
          </div>

          <div class="newsletter-box">
            <label>Join the growth list</label>
            <form class="clean-form">
              <input type="email" placeholder="email@address.com" />
              <button type="submit">
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <line x1="22" y1="2" x2="11" y2="13"></line>
                  <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                </svg>
              </button>
            </form>
          </div>
        </div>

        <div class="f-card links-card">
          <span class="f-label">Apps</span>
          <ul class="f-list">
            <li><a href="/apps/analyzely/">Analyzely GA4 <span class="hot-badge">Hot</span></a></li>
            <li><a href="/apps/pixee/">Pixee Tracking</a></li>
